include _onAvatarErrorMixin

.stream-comment(id=`${id}`)
    .stream-comment__author
        +avatarMixin.stream-comment__author-photo(src=`${author.avatarUrl}`)
        if (author.lastName !=='' || author.firstName !== '')
          .stream-comment__author-name #{author.firstName} #{author.lastName}
        else
          .stream-comment__author-name #{author.login}
    .stream-comment__text #{text}