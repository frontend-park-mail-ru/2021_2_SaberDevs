.preview
    .preview__top
        .author-time
            a.author-time__author-name(href=`${authorUrl}`) #{authorName}
            .author-time__time #{time}
    .preview__content
        .tags
            each tag in tags.length ? tags : ['']
                .tags__tag.preview__tag #{tag}
        .preview__title #{title}
        .preview__description #{text}
    .card__bottom
        .btn-more Read more ->
        .action-btns
            .icon.action-btns_m-right
                .icon__text #{likes}
                .action-btns__likes-icon.icon__img
            .icon
                .icon__text #{comments}
                .action-btns__comments-icon.icon__img