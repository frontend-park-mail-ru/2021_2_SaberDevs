.card(id=`${id}` style=`background: -webkit-gradient(linear, left top, left bottom, from(rgba(0, 0, 0, 0.7)), to(rgba(0, 0, 0, 0.7))), url(${previewUrl});
background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url(${previewUrl}); background-size: cover; background-repeat: no-repeat;`)
  .card__top
    .card__top-left
      .card__time #{datetime}
      .tags
          if Array.isArray(tags)
              each tag in tags.length ? tags : []
                  .tags__tag.preview__tag #{tag}     
    .card__author
      img.card__author-photo(src=`${avatarUrl || 'static/img/users/user_icon_loading.svg'}`)
      .author-name
          .author-name__login #{login}
          .author-name__username #{firstName} #{lastName}
  .card__content
    a(href='#').preview__title #{title}
    .card__description #{text}
  .card__bottom
      .action-btns
          .icon.action-btns_m-right
              .icon__text #{likes}
              button.action-btns__likes-icon.icon__img
          .icon
              .icon__text #{comments}
              button.action-btns__comments-icon.icon__img
