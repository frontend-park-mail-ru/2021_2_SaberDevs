include _onAvatarErrorMixin
include categoryMixin
mixin tagMixin(content, color, cross=false)
  include tag.pug

.card.card__lift-effect(id=`card${id}` style=`background: -webkit-gradient(linear, left top, left bottom, from(rgba(0, 0, 0, 0.7)), to(rgba(0, 0, 0, 0.7))), url(${previewUrl});
background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url(${previewUrl});
background-size: cover;
background-repeat: no-repeat;`)
  .card__top
    .card__top-left
      .card__time-category
        +categoryMixin(category.categoryContent, category.categoryColor, true)
        .card__time
          .category__content #{datetime}
      .tags__row
        if Array.isArray(tags)
          each tag in tags
            +tagMixin(tag.content, tag.color)
    .card__author
      +avatarMixin.card__author-photo(src=`${author.avatarUrl}`)
      .author-name
        if typeof author === 'object'
          .author-name__login #{author.login}
          .author-name__username #{author.firstName} #{author.lastName}
  .card__title #{title}
  .card__description #{text}
  .card__bottom
    .icon
      if (liked === 0)
        button.action-btns__likes-icon.icon__img
      if (liked === 1)
        button.action-btns__likes-icon.action-btns__liked.icon__img
      //- .icon__text #{likes || ''}
      .icon__text(id="likesNum") #{likes || '16'}
    .icon-margin-r
      if (liked === 0)
        button.action-btns__dislike-icon.icon__img
      if (liked === -1)
        button.action-btns__dislike-icon.action-btns__liked.icon__img
    .icon
      //- a(href=`/article/${id}#comments`).action-btns__comments-icon.icon__img
      button.action-btns__comments-icon.icon__img
    .icon__text(id="commentsNum") #{comments || '20'}
    //- .icon__text #{comments || ''}
