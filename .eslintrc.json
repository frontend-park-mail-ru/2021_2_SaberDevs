{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "ignorePatterns": ["public/components/*.pug.js", "globals.js"],
    "rules": {
    },
    "overrides": [
        {
          "files": [
            "dev/*.js",
            "public/*.js",
            "public/flux/*.js",
            "public/flux/*/*.js",
            "public/modules/*.js",
            "public/components/*.js",
            "public/pages/*.js",
            "public/models/*.js",
            "server/*.js"
          ],
          "rules": {
            "linebreak-style": "off",
            "no-multi-spaces": "off",
            "guard-for-in": "off"
          }
        }
    ]
}
